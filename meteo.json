{
    "name": "Meteo",
    "version": "1.2.0",
    "author": "Julien Syx",
    "description": [
        {"lang": "fr", "description": "Ce plugin permet de donner la météo"},
        {"lang": "en", "description": "This plugin give the weather for a city"}
    ],
    "enabled": 1,
    "lang": ["fr","en"],
    "configuration": {
        "city": "Paris",
        "temperature": "celcius",
        "intents": {
            "meteo_getweather": {
                "method": "getWeather",
                "corpus": {}
            }
        },
        "widgets": {
            "getWeather": "Meteo.web.views.weather"
        }
    }
}
